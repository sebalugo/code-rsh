<%= stylesheet_link_tag "user_profile.css" %>
<%= javascript_include_tag "profile_chart.js" %>
<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet">

<input type="text" id="coursesCompleted" value ="<%= @coursesCompleted %>" hidden></input>
<input type="text" id="pastWpms" value ="<%= @pastWpms %>" hidden></input>

<div class="panel panel-default" style="width:80%;margin:0 auto">
	<div class="panel-heading">
		<h2 class="panel-title">User Profile</h2>
	</div>

		<div class="container" style="margin-top:15px;">
			<div class="row">
				<div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
		    	 <div class="well profile">
		            <div class="col-sm-12">
		                <div class="col-xs-12 col-sm-8">
		                    <h2> <%= @user.username %> </h2>
		                    <p><strong>Favorite language: </strong> Ruby. </p>
		                   	
		                    <p><strong>Courses completed: </strong>
		                        <% @completed.each do |course| %>
		                        	<span class="tags"><%= course.category %> </span> 
		                        <% end %>
		                    </p>
		                </div>             
		                <div class="col-xs-12 col-sm-4 text-center">
		                    <figure>
		                        <img src="http://www.localcrimenews.com/wp-content/uploads/2013/07/default-user-icon-profile.png" alt="" class="img-circle img-responsive">
		                        <figcaption class="ratings">
		                            <p>
	
		                            </p>
		                        </figcaption>
		                    </figure>
		                </div>
		            </div>            
		            <div class="col-xs-12 divider text-center">
		                <div class="col-xs-12 col-sm-4 emphasis">
		                    <h2><strong> <%= @wpm %> wpm </strong></h2>                    
		                    <p><small>WPM</small></p>
		                    <button class="btn btn-success btn-block"><span class="fa fa-user"></span></button>
		                </div>
		                <div class="col-xs-12 col-sm-4 emphasis">
		                    <h2><strong><%= @coursesCompleted %></strong></h2>                    
		                    <p><small>Courses completed</small></p>
		                    <button class="btn btn-info btn-block"><span class="fa fa-user"></span></button>
		                </div>
		                <div class="col-xs-12 col-sm-4 emphasis">
		                    <h2><strong> <%= @wl.round() %> %</strong></h2>                    
		                    <p><small>W/L %</small></p>
		                    <button class="btn btn-primary btn-block"><span class="fa fa-user"></span></button>
		                </div>
		            </div>
		    	 </div>                 
				</div>
			</div>
		</div>
	<div class="panel-heading">
		<h2 class="panel-title">Performance Chart</h2>
	</div>

	<div class="row" style="margin:0 auto;">
			<center><canvas id="myChart" width="800px" height="400px" style="background: linear-gradient(to bottom, #345 0%, #234 100%);margin-top:15px;"></canvas><center>
	</div>
	
	<div class="panel-heading">
		<h2 class="panel-title">Badges</h2>
	</div>
	<div id='wrapper'>

		<% if @wpm >= 50 %>
  		<div class='cool_btn1 green'>
				<h1 class='top'>50 <i>WPM</i></h1>
				<h2>V</h2>
		</div>
		<% end %>

		<% if @wpm >= 100 %>
  		<div class='cool_btn1 orange'>
				<h1 class='top'>100 <i>WPM</i></h1>
				<h2>V</h2>
		</div>
		<% end %>

		<% if @coursesCompleted >= 20 %>
		<div class='cool_btn1 teal'>
				<h1 class='top'>20 <i>Courses</i></h1>
				<h2>B</h2>
		</div>
		<% end %>
			
	</div>	

</div>