
<div class="row">
            <div class="col-lg-12 text-center">
                <h1>Leaderboards</h1>
            </div>
</div>



<div class="container" >

<h2>Javascript</h2>

	<table class="table">
		<tr>
			<th class="col-sm-1">Position</th>
			<th class="col-sm-2">Course</th>
			<th class="col-sm-2">User</th>
			<th class="col-sm-2">Points</th>
			<th class="col-sm-2">Time</th>
			<th class="col-sm-2">Date</th>
		</tr>

		<% @js.each_with_index do |act,i| %>
		
		
		<tr >
			<td><%= i+1 %></td>
			<td style="color:gold">Javascript</td>
			<td><%= act.user.username %></td>
			<td><%= act.points %></td>
			<td><%= act.time %></td>
			<td><%= act.created_at.in_time_zone("America/Santo_Domingo").strftime(" %d/%m/%Y %I:%M%p") %></td>
		</tr>

		<% end %>

	</table>

</div>

